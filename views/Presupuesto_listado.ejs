<% include partials/_header %>

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/Tarea_Listado.css">
    <link rel="stylesheet" href="/css/General/General.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/dataTables.bootstrap5.min.css">
</head>

<body style="     position: relative;
padding-bottom: 0em;
min-height: 100vh;">
    <div class="cuerpo">
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">
                    <i class="fa-solid fa-user-astronaut" alt="" width="50" height="30"></i>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                    aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" href="/user/listado_Tarea"> TAREAS </a>
                        </li>       
                        <li class="nav-item">
                            <a class="nav-link " href="/user/listado_Presupuesto">Almacenamiento</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <div class="container card-body" id="divprincipal">
            <div class="card-title division1">
                <h4>Listado de presupuesto</h4>
            </div>
            <div class="card card-body divisionprimer">
                <div class="container mt-2 divisionsecondary">
                    <div class="container">
    
                        <table id="tablaTareas" class="table">
                            <thead>
                                <tr>
                                    <th id="cabeza">N°</th>
                                    <th id="cabeza">Valor</th>
                                    <th id="cabeza">Comision</th>
                                    <th id="cabeza">Detalle</th>
                                    <th id="cabeza">Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (presupuesto) { %>
                                <% for(var i = 0; i < presupuesto.length; i++) { %>
                                <tr>
                                    <td data-label="N°"><%= (i + 1) %></td>
                                    <td data-label="Titulo"> <%= presupuesto[i].valor %> </td>
                                    <td data-label="Descripcion"> <%= presupuesto[i].comision %></td>
                                    <td data-label="Fecha Limite"> <%= presupuesto[i].detalle %></td>
                                    <td data-label="Acciones">
                                        <a href="/user/editar_Presupuesto/<%= presupuesto[i].id %>" class="btn btn-danger item tres"
                                            style="border-radius: 5px;">Editar</a>
                                    </td>
                                </tr>
                                <% } %>
                                <% } %>
                            </tbody>
                        </table>
    
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- INCORPORACIONES PARA ESTILOS DE TABLAS-->
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap5.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#tablaTareas').DataTable();
        });
    </script>
    <script src="/js/validarCampo_Buscar.js"></script>
</body>
<% include partials/_footer %>