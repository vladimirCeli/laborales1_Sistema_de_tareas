<% include partials/_header %>
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/Tarea_Reclamo_Denuncia.css">
    <link rel="stylesheet" href="/css/_Tarea_Reclamo_R.css">
    <link rel="stylesheet" href="/css/General/General.css">
</head>

<body style="     position: relative;
padding-bottom: 0em;
min-height: 100vh;">
    <div class="cuerpo">
        <div class="card card-body" id="divnuevo">
            <div class="row">
                <div class="col-md-11 nuevo">
                    <span class="nuevo">
                        Carlos Villacis
                    </span>
                </div>
                <div class="col-md-1 nuevo">
                    <span class="nuevo">
                        <i class="fa-solid fa-person"></i>
                    </span>
                </div>
            </div>
        </div>
        <div class="container card-body">
            <div class=" container card card-body" id="divReclamo4">
                <div class="container card card-body" id="divReclamo5">
                    <div class="row">
                        <div class="card-body col-md-15" id="divReclamo6">
                            <h4 id="tituloreclamo">Reclamo de tarea</h4>
                        </div>
                        <div class="card-body col-md-5" id="divReclamo7">
                            <a href="/user/listado_Tarea" class="btn btn-danger" id="btnAtrasReclamo">Atras</a>
                        </div>
                    </div>
                    <div class=" container card card-body" id="divReclamo8">

                        <form action="/user/crear_Reclamo_Post" method="POST">
                            <% if (tareas) { %>
                            <input hidden id="tareas2" name="tareas2" value="<%= tareas.id %>">
                            <% } %>
                            <div class="card card-body" id="divReclamo9">
                                <div class="card-body row">
                                    <div class="col-md-8">
                                        <div class="form-group">
                                            <label for="descripcion"> Observaciones </label>
                                            <textarea name="descripcion" id="descripcion" class="form-control"
                                                style="column-gap: 15; row-gap: 5;"
                                                placeholder="Observaciones*"></textarea>
                                        </div>
                                        <div class="form-group">
                                            <label for="archivoReclamo"> Archivo</label>
                                            <input type="url" name="archivoReclamo" id="archivoReclamo"
                                                placeholder="Enlace formato: https://**"
                                                class="form-control ancholabel">
                                        </div>
                                        <div class="form-group">
                                            <label for="fechalimiteR"> Fecha Limite </label>
                                            <input type="text" name="fechalimiteR" id="fechalimiteR"
                                                placeholder="0000-00-00 / AÃ±o-Mes-Dia**"
                                                class="form-control ancholabel">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="card card-body" id="border">
                                <div class="row">
                                    <div class="col-md-6" id="opciones">
                                        <button type="submit" class="btn btn-primary btnRevisar">
                                            Guardar
                                        </button>
                                    </div>
                                    <div class="col-md-6" id="opciones">
                                        <a href="/user/listado_Tarea" class="btn btn-primary btnRevisar"> Cancelar</a>
                                    </div>
                                </div>
                            </div>
                        </form>

                    </div>
                </div>
            </div>

        </div>
    </div>


</body>

<% include partials/_footer %>