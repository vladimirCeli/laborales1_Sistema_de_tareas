<% include partials/_header %>

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/Tarea_Listado.css">
    <link rel="stylesheet" href="/css/General/General.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/dataTables.bootstrap5.min.css">
</head>

<body style="     position: relative;
padding-bottom: 0em;
min-height: 100vh;">
    <div class="cuerpo">
        <div class="container card-body" id="divprincipal">
            <div class="card-title division1">
                <h4>Tarea Buscada</h4>
            </div>
            <div class="row" style="margin: 1%; border-color: black;">
                <div class="card card-body col-md-6" style="align-items: center;">
                    <a href="/user/listado_Tarea" class="btn btn-secondary item tres" style="border-radius: 5px;"> Listado
                        Tareas</a>
                </div>
                <div class="card card-body col-md-6" style="align-items: center;">
                    <a href="/user/Tarea" class="btn btn-secondary item tres" style="border-radius: 5px;">Crear nueva</a>
                </div>
            </div>
            <div class="card card-body divisionprimer">
                <div class="container mt-2 divisionsecondary">
                    <div class="container">
    
                        <table id="tablaTareas" class="table">
                            <thead>
                                <tr>
                                    <th id="cabeza">Titulo</th>
                                    <th id="cabeza">Descripcion</th>
                                    <th id="cabeza">Fecha Limite</th>
                                    <th id="cabeza">Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (tareas) { %>
                                <tr>
                                    <td data-label="Titulo"> <%= tareas.titulo %> </td>
                                    <td data-label="Descripcion"> <%= tareas.descripcion %></td>
                                    <td data-label="Fecha Limite"> <%= tareas.fechalimite %></td>
                                    <td data-label="Acciones">
                                        <a href="/user/editar_Tarea/<%= tareas.id %>" class="btn btn-primary item tres"
                                            style="border-radius: 5px;">Editar</a>
                                        <a onclick="confirmar('<%=tareas.id %>')" class="btn btn-danger item tres"
                                            style="border-radius: 5px;">Borrar</a>
                                        <a href="/user/informacion_Tarea/<%= tareas.id %>" class="btn btn-danger item tres"
                                            style="border-radius: 5px;">Ver</a>
                                    </td>
                                </tr>
                                <% } %>
                            </tbody>
                        </table>
    
                    </div>
                </div>
            </div>
        </div>
        <!-- INCORPORACIONES PARA LAS ALERTAS Y LOS ESTILOS DE TABLAS-->
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.4.4/dist/sweetalert2.all.min.js"></script>
        <!-- INCORPORACIONES PARA ESTILOS DE TABLAS-->
        <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
        <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
        <script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap5.min.js"></script>
        <script>
            $(document).ready(function () {
                $('#tablaTareas').DataTable();
            });
    
            function confirmar(id) {
                Swal.fire({
                    title: 'Â¿Desea eliminar el registro de tarea seleccionado?',
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: `Confirmar`,
                }).then((result) => {
                    /* Read more about isConfirmed, isDenied below */
                    if (result.isConfirmed) {
                        window.location = '/user/eliminar_Tarea/' + id;
                    }
                })
            }
        </script>
    </div>
    
</body>
<% include partials/_footer %>